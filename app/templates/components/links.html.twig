<div class="col-span-full">
    <label class="text-yellow-400 font-semibold block mb-1">Links</label>

    <div
        id="links-wrapper"
        data-prototype="{{ form_widget(form.links.vars.prototype)|e('html_attr') }}"
        class="space-y-2"
    >
        {% for child in form.links %}
            <div class="space-y-1 w-full">
                <div class="flex items-center gap-2">
                    {{ form_widget(child, {
                        attr: {
                            class: 'flex-1 mt-1 bg-zinc-800/80 text-yellow-50 border border-gray-700 rounded-lg px-4 py-2 focus:ring-yellow-500 focus:border-yellow-500 transition'
                        }
                    }) }}
                    <button type="button"
                            class="remove-link-btn shrink-0 rounded-xl text-white bg-red-600 px-2 py-1 hover:text-black custom-shadow cursor-pointer text-lg leading-none">
                        &times;
                    </button>
                </div>

                {% if form_errors(child) %}
                    <div class="text-red-500 text-sm ml-1">
                        {{ form_errors(child) }}
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    <button
        type="button"
        id="add-link-btn"
        class="mt-3 inline-flex items-center gap-1 text-black rounded-xl bg-yellow-500 px-3 py-1 custom-shadow hover:text-yellow-50 font-semibold transition cursor-pointer"
    >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Add Link
    </button>

    {{ form_errors(form.links) }}
</div>