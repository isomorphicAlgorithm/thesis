<div
    x-data="inlineEditor('{{ entityType }}', '{{ entityId }}', '{{ field }}', '{{ initialValue|e('js') }}', '{{ path('inline_edit') }}', '{{ csrf_token('inline_edit') }}')"
    class="group"
>
    <div x-show="!editing" @click="startEditing" class="cursor-pointer hover:bg-gray-700 transition transition-colors duration-200 rounded-md p-2">
        <span
            :class="value.trim() === '' ? 'italic text-white' : 'text-white'"
            class="text-sm"
            x-text="value.trim() !== '' ? value : 'Click to add a bioâ€¦'"
        />
    </div>

    <div x-show="editing" class="flex flex-col">
        <textarea x-model="value" class="font-semibold text-white border border-yellow rounded p-2"></textarea>
        <button @click="save" class="mt-1 text-sm font-semibold text-white hover:underline self-end">Save</button>
    </div>
</div>