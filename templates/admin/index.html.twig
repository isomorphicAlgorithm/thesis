{% extends 'base.html.twig' %}

{% block title %}Manage Users | Bandito{% endblock %}

{% block body %}
<div class="max-w-screen-xl mx-auto px-4 py-8 text-yellow-50">
    <div class="flex items-center mb-6 space-x-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-10 text-yellow-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
        </svg>
        <h1 class="text-3xl font-bold">Users Management</h1>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-black/70 border border-yellow-600/60 rounded-xl p-4 text-center shadow">
            <div class="text-2xl font-bold text-yellow-400">{{ totalUsers }}</div>
            <div class="text-sm text-yellow-200 mt-1 uppercase tracking-wide">Total Users</div>
        </div>
        <div class="bg-black/70 border border-blue-600/60 rounded-xl p-4 text-center shadow">
            <div class="text-2xl font-bold text-blue-400">{{ totalAdmins }}</div>
            <div class="text-sm text-blue-200 mt-1 uppercase tracking-wide">Admins</div>
        </div>
        <div class="bg-black/70 border border-green-500/60 rounded-xl p-4 text-center shadow">
            <div class="text-2xl font-bold text-green-400">{{ totalVerified }}</div>
            <div class="text-sm text-green-200 mt-1 uppercase tracking-wide">Verified</div>
        </div>
        <div class="bg-black/70 border border-red-500/60 rounded-xl p-4 text-center shadow">
            <div class="text-2xl font-bold text-red-400">{{ totalUnverified }}</div>
            <div class="text-sm text-red-200 mt-1 uppercase tracking-wide">Unverified</div>
        </div>
    </div>

    <div class="overflow-x-auto rounded-2xl border border-yellow-500/60 shadow-md bg-black/70 backdrop-blur-md">
        <table class="min-w-full table-auto text-sm text-yellow-50 border-collapse">
            <thead class="bg-yellow-700 text-black sticky top-0 z-10">
                <tr>
                    <th class="p-3 text-left border border-yellow-500 font-semibold">Id</th>
                    <th class="p-3 text-left border border-yellow-500 font-semibold">Username</th>
                    <th class="p-3 text-left border border-yellow-500 font-semibold">Email</th>
                    <th class="p-3 text-left border border-yellow-500 font-semibold">Roles</th>
                    <th class="p-3 text-left border border-yellow-500 font-semibold">Verified</th>
                    <th class="p-3 text-left border border-yellow-500 font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination %}
                    <tr class="hover:bg-yellow-800/20 transition">
                        <td class="p-3 border border-yellow-500 font-medium">{{ user.id }}</td>
                        <td class="p-3 border border-yellow-500 font-medium">{{ user.username }}</td>
                        <td class="p-3 border border-yellow-500">{{ user.email }}</td>
                        <td class="p-3 border border-yellow-500 space-x-1">
                            {% for role in user.roles %}
                                <span class="inline-block px-2 py-0.5 rounded bg-yellow-600/30 text-yellow-200 text-xs font-semibold uppercase tracking-wide">
                                    {{ role|replace({'ROLE_': ''}) }}
                                </span>
                            {% endfor %}
                        </td>
                        <td class="p-3 border border-yellow-500">
                            {% if user.isVerified %}
                                <span class="text-green-400 font-semibold">Yes</span>
                            {% else %}
                                <span class="text-red-400 font-semibold">No</span>
                            {% endif %}
                        </td>
                        <td class="p-3 border border-yellow-500">
                            {% if user != app.user %}
                                <div class="flex flex-wrap gap-2">
                                    <form method="post" action="{{ path('admin_user_toggle_admin', { id: user.id }) }}">
                                        <button type="submit"
                                                class="bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-1.5 px-3 rounded shadow transition text-xs cursor-pointer">
                                            {{ 'ROLE_ADMIN' in user.roles ? 'Revoke Admin' : 'Make Admin' }}
                                        </button>
                                    </form>

                                    <form method="post" action="{{ path('admin_user_toggle_verification', { id: user.id }) }}">
                                        <button type="submit"
                                                class="bg-blue-500 hover:bg-blue-400 text-black font-bold py-1.5 px-3 rounded shadow transition text-xs cursor-pointer">
                                            {{ user.isVerified ? 'Revoke Verification' : 'Make Verified' }}
                                        </button>
                                    </form>

                                    <form method="post"
                                          action="{{ path('admin_user_delete', { id: user.id }) }}"
                                          onsubmit="return confirm('Are you sure you want to delete {{ user.username }}?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button type="submit"
                                                class="bg-red-600 hover:bg-red-500 text-white font-bold py-1.5 px-3 rounded shadow transition text-xs cursor-pointer">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            {% else %}
                                <span class="italic text-yellow-400 text-sm">You</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-zinc-400 py-6">No users found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        {% include 'components/pagination.html.twig' with { pagination: pagination } %}
    </div>
</div>
{% endblock %}