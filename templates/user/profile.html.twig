{# templates/user/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %} {{ user.username }} | Bandito {% endblock %}

{% block body %}
<div class="bg-black/70 border-2 border-yellow-500/60 rounded-xl p-6 max-w-5xl mx-auto space-y-6">
    <!-- Profile Info -->
    <div class="flex items-center space-x-6">

        <!-- Avatar Image -->
        <form method="POST" action="{{ path('app_profile_edit') }}" enctype="multipart/form-data">
            <label for="cover_image_input" class="relative cursor-pointer group block w-40 h-40 flex-shrink-0">
                <img
                    src="{{ asset(coverImagePath) }}"
                    alt="{{ user.username }}"
                    class="rounded-full w-full h-full object-cover transition duration-300 group-hover:opacity-70"
                />
                <!-- Overlay on hover -->
                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 custom-shadow transition-opacity duration-300 flex items-center justify-center rounded-full">
                    <div class="text-yellow-50 text-xs font-semibold flex items-center gap-1">
                        <!-- Pencil Icon -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 11l6-6m2 2l2 2M2 20h20" />
                        </svg>
                        Edit
                    </div>
                </div>
                <!-- Hidden File Input -->
                <input
                    id="cover_image_input"
                    name="cover_image"
                    type="file"
                    class="hidden"
                    accept="image/*"
                    onchange="this.form.submit()"
                />
            </label>
        </form>

        <!-- Username and Bio -->
        <div class="space-y-1">
            <h1 class="text-3xl font-semibold text-yellow-50">{{ user.username }}</h1>
            <p class="text-sm text-gray-400">
                <span class="inline-flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 7.5h18M4.5 21h15a1.5 1.5 0 0 0 1.5-1.5V6.75a1.5 1.5 0 0 0-1.5-1.5h-15a1.5 1.5 0 0 0-1.5 1.5v12.75A1.5 1.5 0 0 0 4.5 21z" />
                    </svg>
                    Joined {{ user.createdAt|date('F Y') }}
                </span>
            </p>
            {% include 'partials/_inline_editable_field.html.twig' with {
                entityType: 'user',
                entityId: user.id,
                field: 'bio',
                initialValue: user.bio
            } %}
        </div>

    </div>

    <!-- Divider -->
    <hr class="border-gray-600" />

    <!-- Stats Grid -->
    <div class="grid grid-cols-3 gap-4">
        <div class="bg-yellow-600/10 text-center rounded-lg p-4 border-2 border-yellow-500/60">
            <p class="text-yellow-300 font-semibold flex items-center justify-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" fill="currentColor" class="text-yellow-300 h-5 w-5">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                </svg>
                Ratings
            </p>
            <p class="text-2xl font-bold text-yellow-50">{{ ratingScores|length }}</p>
        </div>
        <div class="bg-yellow-600/10 text-center rounded-lg p-4 border-2 border-yellow-500/60">
            <p class="text-yellow-300 font-semibold flex items-center justify-center gap-1">
                <!-- Heart icon -->
                <svg class="heart-icon h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09 C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5 c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
                Favorites
            </p>
            <p class="text-2xl font-bold text-yellow-50">{{ user.favorites|length }}</p>
        </div>
        <div class="bg-yellow-600/10 text-center rounded-lg p-4 border-2 border-yellow-500/60">
            <p class="text-yellow-300 font-semibold flex items-center justify-center gap-1">
                <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h6m-2 8 4-4H5a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H9l-2 2z"/>
                </svg>
                Reviews
            </p>
            <p class="text-2xl font-bold text-yellow-50">{{ reviews|length }}</p>
        </div>
    </div>

    <!-- Divider -->
    <hr class="border-gray-600" />

    <div>
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-3xl font-semibold text-yellow-50 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="2" fill="currentColor" class="text-yellow-400 w-7 h-7">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                </svg>
                Ratings
            </h2>

            <div class="flex items-center gap-2">
                <a href="{{ path('album_list', { sort: 'rated_by_me', order: 'desc' }) }}"
                    class="bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-1 px-4 rounded transition custom-shadow">
                    View All Ratings
                </a>
                {% if ratingScores|length > 4 %}
                    <span class="text-sm text-yellow-300 bg-yellow-600/10 px-3 py-1 rounded-full border border-yellow-500">
                        +{{ ratingScores|length - 4 }} more
                    </span>
                {% endif %}
            </div>
        </div>

        {% if ratingScores|length > 0 %}
            <div class="swiper mySwiper">
                <div class="swiper-wrapper flex-nowrap">
                    {% for rating in ratingScores|slice(0, 4) %}
                        <div class="swiper-slide !w-60 flex-shrink-0 rounded-xl p-2">
                            <a href="{{ path('album_show', { id: rating.album.id, slug: rating.album.slug }) }}"
                            class="block group transition duration-300 rounded-xl relative overflow-hidden">

                                <!-- Album Cover + Hover Scale -->
                                <div class="transition-transform duration-300 group-hover:scale-105">
                                    <img
                                        src="{% if file_exists_in_public('uploads/albums/' ~ rating.album.coverImage) %}
                                                {{ asset('uploads/albums/' ~ rating.album.coverImage) }}
                                            {% else %}
                                                {{ rating.album.coverImage }}
                                            {% endif %}"
                                        class="rounded-lg w-full h-48 object-cover"
                                        alt="{{ rating.album.title }}"
                                    >
                                </div>

                                <!-- Overlay Badges - these stay fixed in place -->
                                <div class="absolute top-2 left-2 flex flex-col gap-1 z-10 pointer-events-none">
                                    <!-- Average Rating -->
                                    {% set avgRating = rating.album.averageRating|default(null) %}
                                    {% if avgRating %}
                                        {% set avgColor = avgRating >= 75 ? 'bg-green-500' : (avgRating >= 50 ? 'bg-yellow-500' : 'bg-red-500') %}
                                        <span class="text-sm text-black font-bold px-2 py-1 rounded {{ avgColor }} shadow-md">
                                            {{ avgRating|round }}
                                        </span>
                                    {% endif %}

                                    <!-- Your Rating -->
                                    {% if userRatingScores[rating.album.id] is defined %}
                                        {% set myRating = userRatingScores[rating.album.id] %}
                                        <span class="text-sm text-white bg-blue-600 font-bold px-2 py-1 rounded shadow-md">
                                            {{ myRating }}
                                        </span>
                                    {% endif %}

                                    <!-- Review Icon -->
                                    {% if userReviews[rating.album.id] is defined %}
                                        <span class="inline-flex items-center bg-yellow-400 text-black rounded px-2 py-1 text-sm shadow-md">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M2 4.5A2.5 2.5 0 014.5 2h15A2.5 2.5 0 0122 4.5v11a2.5 2.5 0 01-2.5 2.5H7.414l-5.707 5.707A1 1 0 011 22V4.5z" />
                                            </svg>
                                        </span>
                                    {% endif %}
                                </div>

                                <!-- Album Title -->
                                <p class="text-white text-center mt-2 font-semibold text-yellow-50">
                                    {{ rating.album.title }}
                                </p>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <p class="text-gray-400">No albums listed.</p>
        {% endif %}
    </div>

    <!-- Divider -->
    <hr class="border-gray-600" />

    <!-- Favorite Songs Section -->
    <div class="flex items-center justify-between mb-2">
        <h2 class="text-3xl font-semibold text-yellow-50 flex items-center gap-2">
            <svg class="heart-icon h-7 w-7 fill-current text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09 C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5 c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
            </svg>
            Favorites
        </h2>
        <div class="flex items-center gap-2">
            <a href="{{ path('song_list', {'favorited_only': 1}) }}"
                class="bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-1 px-4 rounded transition custom-shadow">
                View All Favorites
            </a>
            {% if user.favorites|length > 6 %}
                <span class="text-sm text-yellow-300 bg-yellow-600/10 px-3 py-1 rounded-full border border-yellow-500">
                    +{{ user.favorites|length - 6 }} more
                </span>
            {% endif %}
        </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {% for favorite in user.favorites|slice(0, 6) %}
            <div class="bg-yellow-600/10 rounded-xl custom-shadow overflow-hidden cursor-pointer">
                <img
                    src="{% if file_exists_in_public('uploads/songs/' ~ favorite.song.coverImage) %}{{ asset('uploads/songs/' ~ favorite.song.coverImage) }}{% else %}{{ favorite.song.coverImage }}{% endif %}"
                    alt="{{ favorite.song.title }}"
                    class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
                >
                <div class="p-3">
                    <h3 class="text-yellow-50 font-semibold truncate" title="{{ favorite.song.title }}">{{ favorite.song.title }}</h3>
                </div>
            </div>
        {% else %}
            <p class="text-gray-400 col-span-full text-center py-6">No favorite songs yet.</p>
        {% endfor %}
    </div>

    <!-- Divider -->
    <hr class="border-gray-600" />

    <!-- User Reviews Section -->
    <div class="mt-8">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-3xl font-semibold text-yellow-50 flex items-center gap-2">
                <svg class="h-7 w-7 text-yellow-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h6m-2 8 4-4H5a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H9l-2 2z"/>
                </svg>
                Reviews
            </h2>

            <div class="flex items-center gap-2">
                <a href="{{ path('reviews_list', {'my_reviews': 1}) }}"
                    class="bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-1 px-4 rounded transition custom-shadow">
                    View All Reviews
                </a>
                {% if reviews|length > 4 %}
                    <span class="text-sm text-yellow-300 bg-yellow-600/10 px-3 py-1 rounded-full border border-yellow-500">
                        +{{ reviews|length - 4 }} more
                    </span>
                {% endif %}
            </div>
        </div>

        {% if reviews|length > 0 %}
            <div class="swiper mySwiper">
                <div class="swiper-wrapper flex-nowrap">
                    {% for review in reviews|slice(0, 4) %}
                        <div class="swiper-slide !w-60 flex-shrink-0 rounded-xl p-2">
                            <div class="bg-yellow-600/10 rounded-xl p-4 border-2 border-yellow-500/40 space-y-2 h-full flex flex-col justify-between">
                                <a href="{{ path('album_show', { id: review.album.id, slug: review.album.slug }) }}" class="group block">
                                    <img
                                        src="{% if file_exists_in_public('uploads/albums/' ~ review.album.coverImage) %}
                                                {{ asset('uploads/albums/' ~ review.album.coverImage) }}
                                            {% else %}
                                                {{ review.album.coverImage }}
                                            {% endif %}"
                                        class="rounded-lg w-full h-40 object-cover mb-2 transition-transform duration-300 group-hover:scale-105"
                                        alt="{{ review.album.title }}"
                                    >
                                    <h3 class="text-yellow-50 font-semibold truncate" title="{{ review.album.title }}">
                                        {{ review.album.title }}
                                    </h3>
                                </a>
                                <p class="text-sm text-gray-300 line-clamp-4">{{ review.review }}</p>
                                <div class="text-sm text-yellow-400 font-semibold mt-auto">
                                    {{ review.createdAt|date('M d, Y') }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <p class="text-gray-400">No reviews yet.</p>
        {% endif %}
    </div>

</div>
{% endblock %}
