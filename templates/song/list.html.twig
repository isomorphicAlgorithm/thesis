{% extends 'base.html.twig' %}

{% block title %}Songs | Bandito{% endblock %}

{% block body %}

<div class="max-w-screen-xl mx-auto px-4 py-6 text-yellow-50">
    <div class="grid grid-cols-1 md:grid-cols-[250px_1fr] gap-8">

        <!-- Sidebar -->
        <form method="get" class="self-start bg-black/70 backdrop-blur-md p-6 rounded-2xl shadow-md space-y-4 border-2 border-yellow-500/60">
            <h2 class="text-xl font-bold text-yellow-50 mb-2 flex items-center ">
                <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="size-6 text-yellow-400">
                    <path fill-rule="evenodd" d="M2.25 4.5A.75.75 0 0 1 3 3.75h14.25a.75.75 0 0 1 0 1.5H3a.75.75 0 0 1-.75-.75Zm0 4.5A.75.75 0 0 1 3 8.25h9.75a.75.75 0 0 1 0 1.5H3A.75.75 0 0 1 2.25 9Zm15-.75A.75.75 0 0 1 18 9v10.19l2.47-2.47a.75.75 0 1 1 1.06 1.06l-3.75 3.75a.75.75 0 0 1-1.06 0l-3.75-3.75a.75.75 0 1 1 1.06-1.06l2.47 2.47V9a.75.75 0 0 1 .75-.75Zm-15 5.25a.75.75 0 0 1 .75-.75h9.75a.75.75 0 0 1 0 1.5H3a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd"/>
                </svg>
                Filter
            </h2>

            <div>
                <label for="sort" class="text-sm font-medium text-yellow-400">Sort by</label>
                <select id="sort" name="sort" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700 focus:ring-yellow-500 focus:border-yellow-500 cursor-pointer">
                    <option value="title" {% if app.request.get('sort') == 'title' %}selected{% endif %}>Title</option>
                    <option value="created" {% if app.request.get('sort') == 'created' %}selected{% endif %}>Recently Added</option>
                </select>
            </div>

            <div>
                <label for="order" class="text-sm font-medium text-yellow-400">Order</label>
                <select id="order" name="order" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700 focus:ring-yellow-500 focus:border-yellow-500 cursor-pointer">
                    <option value="asc" {% if app.request.get('order') == 'asc' %}selected{% endif %}>Ascending</option>
                    <option value="desc" {% if app.request.get('order') == 'desc' %}selected{% endif %}>Descending</option>
                </select>
            </div>

            <div>
                <label for="genre_id" class="text-sm font-medium text-yellow-400">Genre</label>
                <select id="genre_id" name="genre_id" class="t-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700 focus:ring-yellow-500 focus:border-yellow-500 cursor-pointer">
                    <option value="">All Genres</option>
                    {% for genre in genres %}
                        <option value="{{ genre.id }}" {% if selectedGenreId == genre.id %}selected{% endif %}>{{ genre.displayName }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="band_id" class="text-sm font-medium text-yellow-400">Band</label>
                <select id="band_id" name="band_id" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700 focus:ring-yellow-500 focus:border-yellow-500 cursor-pointer">
                    <option value="" {% if not selectedBandId %}selected{% endif %}>All Bands</option>
                    {% for band in bands %}
                        <option value="{{ band.id }}" {% if selectedBandId == band.id %}selected{% endif %}>{{ band.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="musician_id" class="text-sm font-medium text-yellow-400">Musician</label>
                <select id="musician_id" name="musician_id" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700 focus:ring-yellow-500 focus:border-yellow-500 cursor-pointer">
                    <option value="" {% if not selectedMusicianId %}selected{% endif %}>All Musicians</option>
                    {% for musician in musicians %}
                        <option value="{{ musician.id }}" {% if selectedMusicianId == musician.id %}selected{% endif %}>{{ musician.name }}</option>
                    {% endfor %}
                </select>
            </div>

            {% if app.user %}
                <div class="flex items-center space-x-2">
                    <input
                        type="checkbox"
                        id="favorited_only"
                        name="favorited_only"
                        value="1"
                        {% if app.request.get('favorited_only') == '1' %}checked{% endif %}
                        class="rounded border-yellow-500 text-yellow-600 focus:ring-yellow-500 cursor-pointer"
                    />
                    <label for="favorited_only" class="text-yellow-400 text-sm select-none cursor-pointer">Favorited Only</label>
                </div>
            {% endif %}

            <button type="submit" class="cursor-pointer bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-2 px-4 rounded w-full transition">
                Apply Filters
            </button>
        </form>

        <!-- Songs List -->
        <div class="self-start bg-black/70 backdrop-blur-md p-6 rounded-2xl shadow-md space-y-4 border-2 border-yellow-500/60">

            <h1 class="text-3xl font-bold text-yellow-50 flex items-center gap-3 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor" class="size-8 text-yellow-400">
                    <path fill-rule="evenodd" d="M19.952 1.651a.75.75 0 0 1 .298.599V16.303a3 3 0 0 1-2.176 2.884l-1.32.377a2.553 2.553 0 1 1-1.403-4.909l2.311-.66a1.5 1.5 0 0 0 1.088-1.442V6.994l-9 2.572v9.737a3 3 0 0 1-2.176 2.884l-1.32.377a2.553 2.553 0 1 1-1.402-4.909l2.31-.66a1.5 1.5 0 0 0 1.088-1.442V5.25a.75.75 0 0 1 .544-.721l10.5-3a.75.75 0 0 1 .658.122Z" clip-rule="evenodd"/>
                </svg>
                Explore Songs
                {% if band %}
                    -
                    <span class="text-yellow-400">{{ band.name }}</span>
                {% endif %}
                {% if musician %}
                    -
                    <span class="text-yellow-400">{{ musician.name }}</span>
                {% endif %}
                {% if  genre %}
                    - <span class="text-yellow-400">{{ genre.displayName }}</span>
                {% endif %}
                {% if  album %}
                    - <span class="text-yellow-400">{{ album.title }}</span>
                {% endif %}
                <span class="ml-auto text-yellow-400 font-mono text-lg select-none" title="Total songs matching filters">
                    {{ totalSongs }} songs
                </span>
            </h1>

            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 xl:grid-cols-7 gap-4">
                {% for song in pagination %}
                    <div class="group relative bg-yellow-600/10 custom-shadow dark:bg-zinc-800 rounded-2xl shadow-md overflow-hidden transform hover:scale-[1.02] transition-transform duration-300">

                        <a href="{{ path('song_show', { id: song.id, slug: song.slug }) }}">
                            <img src="{% if file_exists_in_public('uploads/songs/' ~ song.coverImage) %}{{ asset('uploads/songs/' ~ song.coverImage) }}{% else %}{{ song.coverImage }}{% endif %}" alt="{{ song.title }}" class="w-full h-28 object-cover"/>
                        </a>

                        {% if app.user %}
                            <button
                                class="favorite-btn text-red-500 text-red-500 hover:text-red-400 absolute top-2 right-2 transition focus:outline-none no-glow rounded-xl cursor-pointer"
                                data-song-id="{{ song.id }}"
                                data-csrf-token="{{ csrf_token('favorite' ~ song.id) }}"
                                aria-pressed="{{ song.id in favoritedSongIds ? 'true' : 'false' }}"
                                title="{{ song.id in favoritedSongIds ? 'Remove from favorites' : 'Add to favorites' }}"
                            >
                                <!-- Filled Heart -->
                                <svg class="heart-icon h-6 w-6 fill-current {% if song.id not in favoritedSongIds %}hidden{% endif %}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                                            2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09
                                            C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5
                                            c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                                </svg>
                                <!-- Outline Heart -->
                                <svg class="heart-icon h-6 w-6 stroke-current {% if song.id in favoritedSongIds %}hidden{% endif %}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 21.35l-1.45-1.32
                                            C5.4 15.36 2 12.28 2 8.5
                                            2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09
                                            C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5
                                            c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                                </svg>
                            </button>
                        {% endif %}

                        <a href="{{ path('song_show', { id: song.id, slug: song.slug }) }}">
                            <div class="p-3">
                                <h2 class="text-sm font-semibold text-yellow-50 group-hover:text-yellow-400 transition-colors truncate">
                                    {{ song.title }}
                                </h2>
                            </div>
                        </a>
                    </div>
                {% else %}
                    <p class="text-gray-400">No songs found.</p>
                {% endfor %}
            </div>

            <!-- Pagination -->
            {% include 'components/pagination.html.twig' %}

        </div>

    </div>
</div>
{% endblock %}