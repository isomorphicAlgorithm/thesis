{% extends 'base.html.twig' %}

{% block title %} Albums | Bandito {% endblock %}

{% block body %}

<div class="max-w-screen-xl mx-auto px-4 py-6 text-yellow-50">
    <div class="grid grid-cols-1 md:grid-cols-[250px_1fr] gap-8">

        <!-- Sidebar -->
        <form method="get" class="self-start bg-black/70 backdrop-blur-md p-6 rounded-2xl shadow-md space-y-4 border-2 border-yellow-500/60">
            <h2 class="text-xl font-bold text-yellow-50 mb-2 flex items-center ">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-yellow-400">
                    <path fill-rule="evenodd" d="M2.25 4.5A.75.75 0 0 1 3 3.75h14.25a.75.75 0 0 1 0 1.5H3a.75.75 0 0 1-.75-.75Zm0 4.5A.75.75 0 0 1 3 8.25h9.75a.75.75 0 0 1 0 1.5H3A.75.75 0 0 1 2.25 9Zm15-.75A.75.75 0 0 1 18 9v10.19l2.47-2.47a.75.75 0 1 1 1.06 1.06l-3.75 3.75a.75.75 0 0 1-1.06 0l-3.75-3.75a.75.75 0 1 1 1.06-1.06l2.47 2.47V9a.75.75 0 0 1 .75-.75Zm-15 5.25a.75.75 0 0 1 .75-.75h9.75a.75.75 0 0 1 0 1.5H3a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
                </svg>
                Filter
            </h2>

            <div>
                <label for="sort" class="text-sm font-medium text-yellow-400">Sort by</label>
                <select id="sort" name="sort" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700 focus:ring-yellow-500 focus:border-yellow-500">
                    <option value="title" {% if app.request.get('sort') == 'title' %}selected{% endif %}>Title</option>
                    <option value="created" {% if app.request.get('sort') == 'created' %}selected{% endif %}>Recently Added</option>
                </select>
            </div>

            <div>
                <label for="order" class="text-sm font-medium text-yellow-400">Order</label>
                <select id="order" name="order" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700 focus:ring-yellow-500 focus:border-yellow-500">
                    <option value="asc" {% if app.request.get('order') == 'asc' %}selected{% endif %}>Ascending</option>
                    <option value="desc" {% if app.request.get('order') == 'desc' %}selected{% endif %}>Descending</option>
                </select>
            </div>

            <div>
                <label for="band_id" class="text-sm font-medium text-yellow-400">Band</label>
                <select id="band_id" name="band_id" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700">
                    <option value="">All Bands</option>
                    {% for band in bands %}
                        <option value="{{ band.id }}" {% if selectedBandId == band.id %}selected{% endif %}>{{ band.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="musician_id" class="text-sm font-medium text-yellow-400">Musician</label>
                <select id="musician_id" name="musician_id" class="mt-1 w-full rounded bg-yellow-600/10 text-yellow-50 border border-zinc-700">
                    <option value="">All Musicians</option>
                    {% for musician in musicians %}
                        <option value="{{ musician.id }}" {% if selectedMusicianId == musician.id %}selected{% endif %}>{{ musician.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="cursor-pointer bg-yellow-500 hover:bg-yellow-400 text-black font-bold py-2 px-4 rounded w-full transition">
                Apply Filters
            </button>
        </form>

        <!-- Albums List -->
        <div class="self-start bg-black/70 backdrop-blur-md p-6 rounded-2xl shadow-md space-y-4 border-2 border-yellow-500/60">

            <h1 class="text-3xl font-bold text-yellow-50 flex items-center gap-3 mb-6">
                <svg class="size-8 text-yellow-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="8" /><circle cx="12" cy="12" r="3" /></svg>
                Explore Albums
                {% if band %}
                    - <span class="text-yellow-400">{{ band.name }}</span>
                {% endif %}
                {% if musician %}
                    - <span class="text-yellow-400">{{ musician.name }}</span>
                {% endif %}
            </h1>

            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 xl:grid-cols-6 gap-4">
                {% for album in pagination %}
                    <a href="{{ path('album_show', { id: album.id, slug: album.slug }) }}"
                    class="group bg-yellow-600/10 hover:custom-glow dark:bg-zinc-800 rounded-2xl shadow-md overflow-hidden transform hover:scale-[1.02] transition-transform duration-300">
                        <img src="{% if file_exists_in_public('uploads/albums/' ~ album.coverImage) %}{{ asset('uploads/albums/' ~ album.coverImage) }}{% else %}{{ album.coverImage }}{% endif %}"
                            alt="{{ album.title }}"
                            class="w-full h-28 object-cover" />
                        <div class="p-3">
                            <h2 class="text-sm font-semibold text-yellow-50 group-hover:text-yellow-400 transition-colors truncate">
                                {{ album.title }}
                            </h2>
                        </div>
                    </a>
                {% else %}
                    <p class="text-gray-400">No albums found.</p>
                {% endfor %}
            </div>

            {# Pagination #}
            {% set pageCount = pagination.pageCount > 0 ? pagination.pageCount : 1 %}
            <div class="mt-10 flex justify-center">
                <nav class="inline-flex rounded-md shadow-sm isolate" aria-label="Pagination">
                    {# Prev Button #}
                    {% if pagination.currentPageNumber > 1 %}
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({page: pagination.currentPageNumber - 1})) }}"
                        class="relative inline-flex items-center px-3 py-2 text-sm font-medium text-yellow-50 bg-zinc-800 hover:bg-zinc-700 rounded-l-md border border-zinc-700">
                            « Prev
                        </a>
                    {% else %}
                        <span class="relative inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-500 bg-zinc-900 border border-zinc-700 rounded-l-md cursor-not-allowed">
                            « Prev
                        </span>
                    {% endif %}

                    {% for i in 1..pageCount %}
                        {% if i == pagination.currentPageNumber %}
                            <span class="relative inline-flex items-center px-3 py-2 text-sm font-semibold text-black bg-yellow-500 border border-yellow-400">
                                {{ i }}
                            </span>
                        {% else %}
                            <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({page: i})) }}"
                            class="relative inline-flex items-center px-3 py-2 text-sm font-medium text-yellow-50 bg-zinc-800 hover:bg-zinc-700 border border-zinc-700">
                                {{ i }}
                            </a>
                        {% endif %}
                    {% endfor %}

                    {# Next Button #}
                    {% if pagination.currentPageNumber < pagination.pageCount %}
                        <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all | merge({page: pagination.currentPageNumber + 1})) }}"
                        class="relative inline-flex items-center px-3 py-2 text-sm font-medium text-yellow-50 bg-zinc-800 hover:bg-zinc-700 rounded-r-md border border-zinc-700">
                            Next »
                        </a>
                    {% else %}
                        <span class="relative inline-flex items-center px-3 py-2 text-sm font-medium text-zinc-500 bg-zinc-900 border border-zinc-700 rounded-r-md cursor-not-allowed">
                            Next »
                        </span>
                    {% endif %}
                </nav>
            </div>

        </div>

    </div>
</div>
{% endblock %}