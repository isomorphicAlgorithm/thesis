{% extends 'base.html.twig' %}

{% block title %} {{ musician.name }} | Bandito {% endblock %}

{% block body %}
<div class="max-w-5xl mx-auto bg-black/70 text-yellow-50 p-6 rounded-lg border-2 border-yellow-500/60 space-y-6">

    <!-- Musician Header -->
    <div class="flex flex-col md:flex-row gap-6 bg-yellow-600/10 text-yellow-50 p-6 rounded-2xl shadow-lg mb-6">

        <!-- Musician Cover Image -->
        <div>
            {% if musician.coverImage %}
                <img src="{% if file_exists_in_public('uploads/musicians/' ~ musician.coverImage) %}{{ asset('uploads/musicians/' ~ musician.coverImage) }}{% else %}{{ musician.coverImage }}{% endif %}" alt="{{ musician.name }}" class="w-full md:w-72 h-auto rounded-xl object-cover border-2 border-yellow-500 shadow-md">
            {% else %}
                <div class="w-full md:w-72 h-40 rounded-xl bg-gray-700 flex items-center justify-center text-gray-300 text-xl transition-transform duration-300 hover:scale-[1.01] shadow-lg shadow-yellow-500/10">
                    No Cover Image
                </div>
            {% endif %}
        </div>

        <!-- Musician Info (Name, Date, About) -->
        <div class="flex-1 flex flex-col space-y-4 self-center">
            <div>
                <h1 class="text-4xl font-bold">{{ musician.name }}</h1>
                <p class="text-sm text-gray-400 inline-flex items-center gap-1.5 mt-1">
                    <svg class="size-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                            d="M6.75 3v1.5m10.5-1.5v1.5M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25M3 18.75A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75M3 18.75v-8.25a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 10.5v8.25" />
                    </svg>
                    Years Active: {{ musician.activeFrom|date('F Y') }} - {{ musician.activeUntil|date('F Y') }}
                </p>
            </div>

            <div>
                <h2 class="text-xl font-semibold text-yellow-50 mb-2 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-yellow-400 size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
                    </svg>
                    About
                </h2>
                <div class="text-gray-300 mt-2 leading-relaxed [&_a]:text-blue-500 [&_a]:hover:underline [&_a]:focus:outline-none [&_a]:focus:ring-2 [&_a]:transition">
                    {{ musician.bio|raw ?: 'No bio provided yet.' }}
                </div>
            </div>
        </div>
    </div>

    <!-- Links -->
    {% if musician.links %}
    <div class="mt-4">
        <h2 class="text-xl font-bold text-yellow-50 mb-4 flex items-center gap-2">
            <i class="fas fa-link text-yellow-400"></i>
            Links
        </h2>
        <div class="flex flex-wrap gap-6 items-center">
            {% include 'partials/_social_links.html.twig' with { links: musician.links } %}
        </div>
    </div>
    {% endif %}

    <!-- Albums -->
    <div>
        <h2 class="text-xl font-bold text-yellow-50 mb-4 flex items-center gap-3">
            <i class="fas fa-compact-disc text-yellow-400"></i>
            Albums
        </h2>
        {% if musician.albums|length > 0 %}
            <ul class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-2">
                {% for album in musician.albums %}
                    <li class="bg-gray-800 p-3 rounded">
                        <a href="{{ path('album_show', { id: album.id, slug: album.slug }) }}" class="hover:underline text-yellow-400">
                            {{ album.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-400">No albums listed.</p>
        {% endif %}
    </div>

    <!-- Bands -->
    <div class="mt-4">
        <h2 class="text-xl font-bold text-yellow-50 mb-4 flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-yellow-400">
                <path fill-rule="evenodd" d="M8.25 6.75a3.75 3.75 0 1 1 7.5 0 3.75 3.75 0 0 1-7.5 0ZM15.75 9.75a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM2.25 9.75a3 3 0 1 1 6 0 3 3 0 0 1-6 0ZM6.31 15.117A6.745 6.745 0 0 1 12 12a6.745 6.745 0 0 1 6.709 7.498.75.75 0 0 1-.372.568A12.696 12.696 0 0 1 12 21.75c-2.305 0-4.47-.612-6.337-1.684a.75.75 0 0 1-.372-.568 6.787 6.787 0 0 1 1.019-4.38Z" clip-rule="evenodd" />
                <path d="M5.082 14.254a8.287 8.287 0 0 0-1.308 5.135 9.687 9.687 0 0 1-1.764-.44l-.115-.04a.563.563 0 0 1-.373-.487l-.01-.121a3.75 3.75 0 0 1 3.57-4.047ZM20.226 19.389a8.287 8.287 0 0 0-1.308-5.135 3.75 3.75 0 0 1 3.57 4.047l-.01.121a.563.563 0 0 1-.373.486l-.115.04c-.567.2-1.156.349-1.764.441Z" />
            </svg>
            Bands
        </h2>

        {% if musician.bands|length > 0 %}
            <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
                {% for band in musician.bands %}
                    <a href="{{ path('band_show', { id: band.id, slug: band.slug }) }}"
                    class="group hover:custom-glow bg-yellow-600/10 backdrop-blur-lg p-6 rounded-2xl text-center hover:shadow-2xl transition-transform hover:-translate-y-2 border border-white/10">

                        <div class="w-24 h-24 mx-auto rounded-full overflow-hidden border-4 border-yellow-400 shadow-lg">
                            <img
                                src="{% if file_exists_in_public('uploads/bands/' ~ band.coverImage) %}{{ asset('uploads/bands/' ~ band.coverImage) }}{% else %}{{ band.coverImage }}{% endif %}"
                                alt="{{ band.name }}"
                                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                            >
                        </div>

                        <p class="text-yellow-50 font-semibold mt-4 text-lg group-hover:text-yellow-400 transition-colors">
                            {{ band.name }}
                        </p>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-gray-400">No bands listed.</p>
        {% endif %}
    </div>

</div>
{% endblock %}