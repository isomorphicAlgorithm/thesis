<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bandito{% endblock %}</title>

    {{ encore_entry_link_tags('styles') }}

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="bg-white text-gray-800 dark:bg-gray-900 dark:text-white">

    <div x-data="themeSwitcher()" x-init="$watch('isDark', value => document.documentElement.classList.toggle('dark', value))">
        <header class="shadow bg-white dark:bg-gray-800 flex items-center justify-between px-4 py-2">
            <div class="flex items-center space-x-4">
                <img src="{{ asset('images/bandito.logo.png') }}" alt="Bandito Logo" class="w-32 p-2 bg-white dark:bg-yellow-500 rounded" />
                <span class="text-2xl font-bold">BANDITO</span>
            </div>
            <button @click="toggleTheme" class="transition-colors duration-300">
                <span x-text="isDark ? 'ðŸŒ™ Dark' : 'ðŸŒž Light'"></span>
            </button>
        </header>

        <main class="flex-grow container mx-auto p-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="p-4 mb-4 rounded text-sm font-medium
                        {% if label == 'success' %}
                            bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100
                        {% elseif label == 'error' %}
                            bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100
                        {% endif %}
                    ">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer class="bg-gray-800 text-white text-center p-4">
            <p>Â© 2025 Bandito. All rights reserved.</p>
        </footer>
    </div>

    {{ encore_entry_script_tags('app') }}
</body>
</html>
