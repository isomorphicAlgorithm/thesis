<!DOCTYPE html>
<html lang="en" class="bg-gray-900 font-sans" x-data="themeSwitcher()">

    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Bandito {% endblock %}</title>

        {# Favicon links #}
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon-16x16.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="48x48" href="{{ asset('images/favicon-48x48.png') }}">
        <link rel="icon" type="image/png" sizes="64x64" href="{{ asset('images/favicon-64x64.png') }}">
        <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('images/favicon-96x96.png') }}">
        <link rel="icon" type="image/png" sizes="128x128" href="{{ asset('images/favicon-128x128.png') }}">
        <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('images/favicon-192x192.png') }}">
        <link rel="icon" type="image/png" sizes="256x256" href="{{ asset('images/favicon-256x256.png') }}">
        <link rel="icon" type="image/png" sizes="512x512" href="{{ asset('images/favicon-512x512.png') }}">

        {{ encore_entry_link_tags('app') }}

        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <body
        x-cloak
        :class="isDark ? 'theme-dark' : 'theme-light'"
        class="flex flex-col min-h-screen text-gray-800 dark:text-yellow-50 transition-colors duration-500 ease-in-out"
    >

        {% include 'partials/header.html.twig' %}

        <!-- Theme toggle applies only here -->
        <main
            class="flex-1 flex flex-col transition-all duration-500 ease-in-out py-12 px-4"
        >
            {% include 'partials/_flashes.html.twig' %}

            {% block body %}{% endblock %}
        </main>

        <!-- Static footer -->
        <footer class="bg-black/70 text-yellow-50 text-center p-4">
            <p>Â© 2025 Bandito. All rights reserved.</p>
        </footer>

        {{ encore_entry_script_tags('app') }}

    </body>

</html