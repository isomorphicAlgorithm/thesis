{% extends 'base.html.twig' %}

{% block title %} Sign In | Bandito {% endblock %}

{% block body %}
<div class="flex flex-col items-center justify-center min-h-[calc(100vh-64px)] space-y-6">
    <div class="w-full max-w-md p-6 bg-black/70 backdrop-blur-md rounded-2xl border border-yellow-500 shadow-lg shadow-yellow-500/5 text-yellow-50 rounded-xl transition-transform duration-300 hover:scale-105 transition-colors duration-300">

        <div class="flex justify-center mt-1">
            <a href="{{ path('homepage') }}">
                <img src="{{ asset('images/default_logo.png') }}" alt="Bandito Logo" class="h-28 w-auto max-w-[200px] object-contain drop-shadow-xl"/>
            </a>
        </div>

        <h2 class="mt-1 text-2xl font-semibold text-center text-yellow-50">Sign In to Bandito</h2>

        {% include 'security/login_inner.html.twig' %}

    </div>
</div>
{% endblock %}