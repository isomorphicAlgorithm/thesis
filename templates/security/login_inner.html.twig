{{ form_start(loginForm) }}

    {% if form_errors(loginForm) %}
        <div class="mt-4 rounded-lg border border-red-500 bg-red-100 text-red-800 px-4 py-3 text-sm font-medium flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-red-600">
                <path fill-rule="evenodd" d="M9.401 3.003c1.155-2 4.043-2 5.197 0l7.355 12.748c1.154 2-.29 4.5-2.599 4.5H4.645c-2.309 0-3.752-2.5-2.598-4.5L9.4 3.003ZM12 8.25a.75.75 0 0 1 .75.75v3.75a.75.75 0 0 1-1.5 0V9a.75.75 0 0 1 .75-.75Zm0 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
            </svg>
            <span>{{ form_errors(loginForm) }}</span>
        </div>
    {% endif %}

    <!-- Email field -->
    <div class="mt-6">
        <label class="block text-sm font-medium text-yellow-50 mb-1">Email</label>
        <div class="relative">
            <span class="absolute left-3 top-2.5 text-yellow-500">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z" />
                    <path d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z" />
                </svg>
            </span>
            {% if loginForm.email.vars.errors|length > 0 %}
                <span class="absolute right-3 top-2.5 text-red-500">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12ZM12 8.25a.75.75 0 0 1 .75.75v3.75a.75.75 0 0 1-1.5 0V9a.75.75 0 0 1 .75-.75Zm0 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
                    </svg>
                </span>
            {% endif %}

            <!-- Input -->
            {{ form_widget(loginForm.email, {
                attr: {
                    class: 'pl-10 w-full p-2 border-2 border-yellow-500/60 rounded-md bg-white text-black focus:outline-none focus:ring focus:ring-yellow-500/30 focus:border-yellow-400',
                    placeholder: 'Enter your email'
                }
            }) }}

            <ul class="form-errors">{{ form_errors(loginForm.email) }}</ul>
        </div>
    </div>

    <!-- Password field -->
    <div class="mt-4" x-cloak x-data="{ show: false }">
        <label class="block text-sm font-medium text-yellow-50 mb-1">Password</label>

        <div class="relative">
            <!-- Lock Icon -->
            <span class="absolute left-3 top-2.5 text-yellow-500">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd" d="M12 1.5a5.25 5.25 0 0 0-5.25 5.25v3a3 3 0 0 0-3 3v6.75a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3v-6.75a3 3 0 0 0-3-3v-3c0-2.9-2.35-5.25-5.25-5.25Zm3.75 8.25v-3a3.75 3.75 0 1 0-7.5 0v3h7.5Z" clip-rule="evenodd" />
                </svg>
            </span>

            <!-- Icons on the right -->
            <div class="absolute right-3 top-2.5 flex items-center space-x-2">
                {% if loginForm.password.vars.errors|length > 0 %}
                    <!-- Error icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-red-500">
                        <path fill-rule="evenodd" d="M5.47 5.47a.75.75 0 0 1 1.06 0L12 10.94l5.47-5.47a.75.75 0 1 1 1.06 1.06L13.06 12l5.47 5.47a.75.75 0 1 1-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 0 1-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                    </svg>
                {% endif %}

                <!-- Toggle visibility button -->
                <button type="button"
                        @click="show = !show"
                        class="text-yellow-500 hover:text-black cursor-pointer rounded-xl"
                        :aria-label="show ? 'Hide password' : 'Show password'">
                    <svg x-show="!show" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 0 1 0-1.113ZM17.25 12a5.25 5.25 0 1 1-10.5 0 5.25 5.25 0 0 1 10.5 0Z" clip-rule="evenodd" />
                    </svg>
                    <svg x-show="show" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                        <path d="M3.53 2.47a.75.75 0 0 0-1.06 1.06l18 18a.75.75 0 1 0 1.06-1.06l-18-18ZM22.676 12.553a11.249 11.249 0 0 1-2.631 4.31l-3.099-3.099a5.25 5.25 0 0 0-6.71-6.71L7.759 4.577a11.217 11.217 0 0 1 4.242-.827c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113Z" />
                        <path d="M15.75 12c0 .18-.013.357-.037.53l-4.244-4.243A3.75 3.75 0 0 1 15.75 12ZM12.53 15.713l-4.243-4.244a3.75 3.75 0 0 0 4.244 4.243Z" />
                        <path d="M6.75 12c0-.619.107-1.213.304-1.764l-3.1-3.1a11.25 11.25 0 0 0-2.63 4.31c-.12.362-.12.752 0 1.114 1.489 4.467 5.704 7.69 10.675 7.69 1.5 0 2.933-.294 4.242-.827l-2.477-2.477A5.25 5.25 0 0 1 6.75 12Z" />
                    </svg>
                </button>
            </div>

            <!-- Input -->
            {{ form_widget(loginForm.password, {
                attr: {
                    ':type': 'show ? "text" : "password"',
                    class: 'pl-10 pr-12 w-full p-2 border-2 border-yellow-500/60 rounded-md bg-white text-black focus:outline-none focus:ring focus:ring-yellow-500/30 focus:border-yellow-400',
                    placeholder: 'Enter your password'
                }
            }) }}
        </div>

        <ul class="form-errors">{{ form_errors(loginForm.password) }}</ul>
    </div>

    {{ form_row(loginForm._token) }}

    <div class="flex items-center mt-4">
        {{ form_widget(loginForm.remember_me, {
            attr: {
                class: 'cursor-pointer h-4 w-4 text-yellow-500 bg-gray-800 border-gray-600 rounded focus:ring-yellow-500'
            }
        }) }}
        <label for="{{ loginForm.remember_me.vars.id }}" class="ml-2 text-sm text-gray-300 select-none">
            Remember me
        </label>
    </div>

    <div class="mt-6">
        <button type="submit"
        class="cursor-pointer w-full bg-yellow-500 hover:bg-yellow-400 text-black font-semibold py-2 rounded-md shadow-md transition transform hover:scale-105">
            Sign In
        </button>
    </div>

{{ form_end(loginForm) }}

{% if showResendLink %}
    <div class="mt-6 text-center">
        <p class="text-sm text-yellow-400">Didn't receive a verification email?</p>

        {{ form_start(resendVerificationForm, {
            attr: { class: 'mt-2 flex justify-center gap-2 items-center' }
        }) }}
            <button type="submit" class="cursor-pointer mt-1 bg-yellow-500 text-black px-4 py-2 rounded-md font-medium hover:bg-yellow-600 transition">
                Resend Email
            </button>
        {{ form_end(resendVerificationForm) }}
    </div>
{% endif %}

<p class="mt-4 text-center text-sm text-gray-300">
    Don't have an account? <a href="{{ path('app_register') }}" class="cursor-pointer text-yellow-400 hover:underline">Register here</a>
</p>