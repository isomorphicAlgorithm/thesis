    { title: 'Musicians', subtitle: 'Discover musicians', path: path('musician_list'), icon: '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-16 h-16"><path d="M8.25 4.5a3.75 3.75 0 1 1 7.5 0v8.25a3.75 3.75 0 1 1-7.5 0V4.5Z" /><path d="M6 10.5a.75.75 0 0 1 .75.75v1.5a5.25 5.25 0 1 0 10.5 0v-1.5a.75.75 0 0 1 1.5 0v1.5a6.751 6.751 0 0 1-6 6.709v2.291h3a.75.75 0 0 1 0 1.5h-7.5a.75.75 0 0 1 0-1.5h3v-2.291a6.751 6.751 0 0 1-6-6.709v-1.5A.75.75 0 0 1 6 10.5Z" /></svg>' },
    { title: 'Albums', subtitle: 'Browse albums', path: path('album_list'), icon: '<svg class="w-16 h-16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><circle cx="12" cy="12" r="8" /><circle cx="12" cy="12" r="3" /></svg>' },
    { title: 'Songs', subtitle: 'Listen to songs', path: path('song_list'), icon: '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-16 h-16"><path fill-rule="evenodd" d="M19.952 1.651a.75.75 0 0 1 .298.599V16.303a3 3 0 0 1-2.176 2.884l-1.32.377a2.553 2.553 0 1 1-1.403-4.909l2.311-.66a1.5 1.5 0 0 0 1.088-1.442V6.994l-9 2.572v9.737a3 3 0 0 1-2.176 2.884l-1.32.377a2.553 2.553 0 1 1-1.402-4.909l2.31-.66a1.5 1.5 0 0 0 1.088-1.442V5.25a.75.75 0 0 1 .544-.721l10.5-3a.75.75 0 0 1 .658.122Z" clip-rule="evenodd" /></svg>' },
    { title: 'Reviews', subtitle: 'Read reviews', path: path('reviews_list'), icon: '            <svg class="w-16 h-16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M7 8h10M7 12h6m-2 8 4-4H5a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H9l-2 2z"/></svg>' }
] %}

<div class="flex flex-col items-center justify-center min-h-[calc(100vh-64px)] space-y-6">
    <div class="w-full max-w-7xl">

        <h1 class="text-5xl md:text-5xl font-bold mb-12 tracking-tight text-yellow-600 text-center">
            Welcome to <span class="text-yellow-500">Bandito</span>
        </h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-12 w-full">

            {% for card in cards %}
                <a href="{{ card.path }}" class="flex flex-col items-center custom-shadow rounded-xl bg-yellow-50 p-10 shadow-md hover:shadow-lg transition-shadow duration-300 transform hover:-translate-y-1">
                    <div class="mb-5 text-yellow-400" aria-hidden="true">{{ card.icon|raw }}</div>
                    <h2 class="text-2xl font-semibold mb-2">{{ card.title }}</h2>
                    <p class="text-yellow-600 text-center">{{ card.subtitle }}</p>
                </a>
            {% endfor %}

        </div>

    </div>
</div>

{% endblock %}