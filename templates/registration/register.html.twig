{% extends 'base.html.twig' %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 transition-colors duration-500">
    <div class="w-full max-w-md p-6 bg-gray-800 text-white rounded-xl shadow-xl border border-yellow-500 transition-transform duration-300 hover:scale-105">
        <div class="flex justify-between items-center mb-6">
            <img src="{{ asset('images/bandito_logo.png') }}" alt="Bandito Logo" class="h-10">
        </div>

        <h2 class="text-2xl font-semibold text-center text-white">Register for Bandito</h2>

        {% for message in app.flashes('success') %}
            <div class="mt-4 bg-green-100 text-green-800 text-sm rounded-md p-2">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="mt-4 bg-red-100 text-red-800 text-sm rounded-md p-2">{{ message }}</div>
        {% endfor %}

        {{ form_start(registrationForm) }}

        <div class="mt-4">
            <label class="block text-sm font-medium text-gray-200 mb-1">Username</label>
            {{ form_widget(registrationForm.username, {
                attr: {
                    class: 'w-full p-2 pl-3 border border-gray-600 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400'
                }
            }) }}
        </div>

        <div class="mt-4">
            <label class="block text-sm font-medium text-gray-200 mb-1">Email</label>
            {{ form_widget(registrationForm.email, {
                attr: {
                    class: 'w-full p-2 pl-3 border border-gray-600 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400'
                }
            }) }}
        </div>

        <div class="mt-4">
            <label class="block text-sm font-medium text-gray-200 mb-1">Password</label>
            {{ form_widget(registrationForm.plainPassword.first, {
                attr: {
                    class: 'w-full p-2 pl-3 border border-gray-600 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400'
                }
            }) }}
        </div>

        <div class="mt-4">
            <label class="block text-sm font-medium text-gray-200 mb-1">Repeat Password</label>
            {{ form_widget(registrationForm.plainPassword.second, {
                attr: {
                    class: 'w-full p-2 pl-3 border border-gray-600 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-yellow-400'
                }
            }) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-2 rounded-md shadow-md transition transform hover:scale-105">
                Register
            </button>
        </div>
        {{ form_end(registrationForm) }}

        <p class="mt-4 text-center text-sm text-gray-300">
            Already have an account? <a href="{{ path('app_login') }}" class="text-yellow-400 hover:underline">Log in here</a>
        </p>
    </div>
</div>
{% endblock %}
