{% extends 'base.html.twig' %}

{% block title %}Register - Bandito{% endblock %}

{% block body %}
<div class="max-w-md mx-auto bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold text-center mb-6">Create Your Bandito Account</h1>

    {{ form_start(registrationForm) }}
        <div class="space-y-4">
            {{ form_row(registrationForm.username, {'attr': {'class': 'w-full px-4 py-2 rounded border dark:bg-gray-700'}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 rounded border dark:bg-gray-700'}}) }}
            {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'w-full px-4 py-2 rounded border dark:bg-gray-700'}}) }}
            {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'w-full px-4 py-2 rounded border dark:bg-gray-700'}}) }}
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="mt-6 w-full bg-yellow-500 hover:bg-yellow-600 dark:bg-yellow-600 dark:hover:bg-yellow-500 text-white font-semibold py-2 px-4 rounded transition hover:scale-105">
            Register
        </button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}